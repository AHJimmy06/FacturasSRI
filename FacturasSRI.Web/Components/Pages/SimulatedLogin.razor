@page "/login"
@layout EmptyLayout

@inject CurrentUserState CurrentUser
@inject NavigationManager Navigation
@inject HttpClient Http
@inject LocalStorageService LocalStorage
@using FacturasSRI.Web.Services
@using FacturasSRI.Web.Dtos

@rendermode InteractiveServer

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-header text-center">
            <h3>Iniciar Sesi칩n</h3>
        </div>
        <div class="card-body">
            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" FormName="login-form">
                <DataAnnotationsValidator />
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Correo Electr칩nico</label>
                    <InputText class="form-control" @bind-Value="loginModel.Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Clave</label>
                    <InputText type="password" class="form-control" @bind-Value="loginModel.Password" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary" disabled="@isLoggingIn">
                        @if (isLoggingIn)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span>Ingresando...</span>
                        }
                        else
                        {
                            <span>Ingresar</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
        <div class="card-footer text-muted small">
             <p class="mb-1"><strong>Usuario:</strong> admin@facturassri.com</p>
             <p class="mb-0"><strong>Clave:</strong> Admin123*</p>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private bool isLoggingIn = false;

    private async Task HandleLogin()
    {
        isLoggingIn = true;
        errorMessage = null;
        StateHasChanged();

        var request = new LoginRequestDto { Email = loginModel.Email, Password = loginModel.Password };
        var response = await Http.PostAsJsonAsync("api/auth/login", request);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResponseDto>();
            if (result != null && !string.IsNullOrEmpty(result.Token))
            {
                await LocalStorage.SetItemAsync("authToken", result.Token);
                CurrentUser.SetUser(result.Token);
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "No se recibi칩 un token v치lido del servidor.";
            }
        }
        else
        {
            errorMessage = "Credenciales incorrectas. Por favor, verifique sus datos.";
        }
        
        isLoggingIn = false;
        StateHasChanged();
    }
    public class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        public string Password { get; set; } = string.Empty;
    }
}