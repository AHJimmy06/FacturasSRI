@page "/invoices/register-payment/{FacturaId:guid}"
@attribute [Authorize(Roles = "Administrador, Vendedor")]
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using System.Security.Claims
@inject ICobroService CobroService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IInvoiceService InvoiceService

<PageTitle>Registrar Pago para Factura</PageTitle>

<div class="page-header mb-4">
    <h1 class="page-title">Registrar Pago para Factura</h1>
    <p class="text-muted">Adjunte el comprobante y registre el monto pagado para la factura <strong>@(invoice?.NumeroFactura ?? FacturaId.ToString())</strong>.</p>
</div>

@if (invoice != null)
{
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card card-body">
                <h6 class="card-subtitle mb-2 text-muted">Monto Total</h6>
                <p class="card-text fs-4 fw-bold">@invoice.Total.ToString("C")</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-body">
                <h6 class="card-subtitle mb-2 text-muted">Pagos Realizados</h6>
                <p class="card-text fs-4 fw-bold text-success">@((invoice.Total - invoice.SaldoPendiente).ToString("C"))</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-body">
                <h6 class="card-subtitle mb-2 text-muted">Saldo Pendiente</h6>
                <p class="card-text fs-4 fw-bold text-danger">@invoice.SaldoPendiente.ToString("C")</p>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mb-4" role="alert">
        @errorMessage
    </div>
}

<div class="card">
    <div class="card-body">
        <EditForm EditContext="editContext" OnValidSubmit="HandleRegistrarPago">
            <DataAnnotationsValidator />
            <div class="mb-3">
                <label class="form-label">Monto</label>
                <InputNumber @bind-Value="Monto" class="form-control" step="0.01" />
                <ValidationMessage For="@(() => nuevoCobro.Monto)" />
            </div>
            <div class="mb-3">
                <label class="form-label">Método de Pago</label>
                <InputSelect @bind-Value="SelectedMetodoDePago" class="form-control">
                    @foreach (var metodo in metodosDePago)
                    {
                        <option value="@metodo">@metodo</option>
                    }
                </InputSelect>
                <ValidationMessage For="@(() => nuevoCobro.MetodoDePago)" />
            </div>

            @if (SelectedMetodoDePago == "Otro")
            {
                <div class="mb-3">
                    <label class="form-label">Especificar Otro Método de Pago</label>
                    <InputText @bind-Value="otroMetodoDePago" class="form-control" />
                </div>
            }

            <div class="mb-3">
                <label class="form-label">@referenciaLabel</label>
                <InputText @bind-Value="nuevoCobro.Referencia" class="form-control" />
                <ValidationMessage For="@(() => nuevoCobro.Referencia)" />
            </div>

            @if (isComprobanteVisible)
            {
                <div class="mb-3">
                    <label for="comprobante" class="form-label">Comprobante de Pago (PDF, PNG, JPG)
                        @if (!isComprobanteRequired) { <span class="text-muted">(Opcional)</span> }
                    </label>
                    <InputFile id="comprobante" class="form-control" OnChange="@OnInputFileChange" disabled="@isSubmitting" accept=".pdf,.png,.jpg,.jpeg" />
                    @if (!string.IsNullOrEmpty(fileValidationMessage))
                    {
                        <div class="text-danger small mt-1">@fileValidationMessage</div>
                    }
                </div>
            }

            <div class="mt-4">
                <button type="button" class="btn btn-secondary me-2" @onclick="GoBack">Cancelar</button>
                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span> Guardando...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-floppy-fill me-2"></i>Guardar Pago</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public Guid FacturaId { get; set; }

    private InvoiceDto? invoice;
    private RegistrarCobroDto nuevoCobro = new();
    private EditContext? editContext;

    private string? errorMessage;
    private bool isSubmitting = false;
    private IBrowserFile? comprobanteFile;
    private string? fileValidationMessage;

    // --- Dynamic Form State ---
    private string referenciaLabel = "Observación (Opcional)";
    private bool isComprobanteVisible = false;
    private bool isComprobanteRequired = false;
    // -------------------------

    private List<string> metodosDePago = new() { "Efectivo", "Transferencia", "Cheque", "Tarjeta de Crédito/Débito", "Otro" };
    private string _selectedMetodoDePago = "Efectivo";
    private string SelectedMetodoDePago
    {
        get => _selectedMetodoDePago;
        set
        {
            _selectedMetodoDePago = value;
            nuevoCobro.MetodoDePago = value; // Keep the model in sync
            UpdateFormBasedOnPaymentMethod(value);
        }
    }
    private string otroMetodoDePago = "";

    private decimal Monto
    {
        get => nuevoCobro.Monto;
        set => nuevoCobro.Monto = Math.Round(value, 2);
    }

    protected override async Task OnInitializedAsync()
    {
        editContext = new EditContext(nuevoCobro);
        
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userId = user.FindFirstValue(ClaimTypes.NameIdentifier);

        if (string.IsNullOrEmpty(userId))
        {
            errorMessage = "No se pudo identificar al usuario. Por favor, inicie sesión de nuevo.";
            return;
        }

        nuevoCobro.UsuarioIdCreador = Guid.Parse(userId);
        nuevoCobro.FacturaId = FacturaId;
        nuevoCobro.FechaCobro = DateTime.UtcNow;

        SelectedMetodoDePago = "Efectivo"; // Set initial state
        invoice = await InvoiceService.GetInvoiceByIdAsync(FacturaId);
    }

    private void UpdateFormBasedOnPaymentMethod(string metodo)
    {
        switch (metodo)
        {
            case "Efectivo":
                referenciaLabel = "Observación (Opcional)";
                isComprobanteVisible = false;
                isComprobanteRequired = false;
                break;
            case "Transferencia":
                referenciaLabel = "Nro. de Comprobante / ID Transacción";
                isComprobanteVisible = true;
                isComprobanteRequired = true;
                break;
            case "Cheque":
                referenciaLabel = "Nro. Cheque y Banco";
                isComprobanteVisible = true;
                isComprobanteRequired = true;
                break;
            case "Tarjeta de Crédito/Débito":
                referenciaLabel = "Lote / Autorización (Voucher)";
                isComprobanteVisible = true;
                isComprobanteRequired = false; // Opcional
                break;
            case "Otro":
                referenciaLabel = "Referencia";
                isComprobanteVisible = true;
                isComprobanteRequired = false; // Opcional
                break;
        }
        StateHasChanged();
    }


    private void OnInputFileChange(InputFileChangeEventArgs e)
    {
        fileValidationMessage = null;
        comprobanteFile = e.GetMultipleFiles(1).FirstOrDefault();

        if (comprobanteFile != null)
        {
            if (comprobanteFile.Size > 5 * 1024 * 1024) // 5MB limit
            {
                fileValidationMessage = "Error: El archivo es demasiado grande (máximo 5MB).";
                comprobanteFile = null;
            }
        }
    }

    private async Task HandleRegistrarPago()
    {
        isSubmitting = true;
        errorMessage = null;
        fileValidationMessage = null;

        // Finalize payment method if "Otro" is selected
        if (SelectedMetodoDePago == "Otro")
        {
            nuevoCobro.MetodoDePago = otroMetodoDePago;
        }

        // File validation
        if (isComprobanteRequired && comprobanteFile == null)
        {
            fileValidationMessage = "Debe adjuntar el comprobante de pago para este método.";
            isSubmitting = false;
            return;
        }

        if (editContext != null && editContext.Validate())
        {
            try
            {
                Stream? fileStream = null;
                string? fileName = null;

                if (comprobanteFile != null)
                {
                    fileStream = comprobanteFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
                    fileName = comprobanteFile.Name;
                }
                
                await CobroService.RegistrarCobroAsync(nuevoCobro, fileStream, fileName);
                
                if (fileStream != null)
                {
                    await fileStream.DisposeAsync();
                }

                Navigation.NavigateTo($"/invoices/{FacturaId}");
            }
            catch (Exception ex)
            {
                errorMessage = $"Error al registrar el pago: {ex.Message}";
            }
            finally
            {
                isSubmitting = false;
            }
        }
        else
        {
            isSubmitting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo($"/invoices/{FacturaId}");
    }
}
