@page "/taxes"
@attribute [Authorize]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Web.Components.Shared // Added this line
@inject ITaxService TaxService
@inject NavigationManager Navigation

<PageTitle>Lista de Impuestos</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Impuestos</h1>
    <button class="btn btn-primary" @onclick="GoToCreateTax">
        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nuevo Impuesto
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código SRI</th>
            <th>Porcentaje</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tax in taxes)
        {
            <tr>
                <td>@tax.Nombre</td>
                <td>@tax.CodigoSRI</td>
                <td>@tax.Porcentaje</td>
                <td>
                    <button class="btn btn-sm btn-secondary" @onclick="() => OpenEditModal(tax)">Editar</button>
                    <button class="btn btn-sm @(tax.EstaActivo ? "btn-danger" : "btn-success")" @onclick="() => HandleDeleteTax(tax.Id)">
                        @(tax.EstaActivo ? "Desactivar" : "Activar")
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (taxToEdit != null)
{
    <EditTaxModal Tax="taxToEdit" IsVisible="isEditModalVisible" OnSave="HandleUpdateTax" OnClose="CloseEditModal" />
}

<ConfirmationModal IsVisible="showConfirmationModal"
                   Title="@confirmationModalTitle"
                   Message="@confirmationModalMessage"
                   OnConfirm="ConfirmToggleTaxStatus"
                   OnCancel="CancelToggleTaxStatus" />

@code {
    private List<TaxDto> taxes = new();
    private TaxDto? taxToEdit;
    private bool isEditModalVisible = false;

    // Confirmation Modal State
    private bool showConfirmationModal = false;
    private string confirmationModalTitle = string.Empty;
    private string confirmationModalMessage = string.Empty;
    private Guid taxToToggleId;

    protected override async Task OnInitializedAsync()
    {
        await LoadTaxes();
    }

    private async Task LoadTaxes()
    {
        taxes = await TaxService.GetTaxesAsync();
    }

    private void HandleDeleteTax(Guid id)
    {
        var taxToToggle = taxes.FirstOrDefault(t => t.Id == id);
        if (taxToToggle == null) return;

        taxToToggleId = id;
        confirmationModalTitle = "Confirmar Acción";
        confirmationModalMessage = $"¿Está seguro de que desea {(taxToToggle.EstaActivo ? "desactivar" : "activar")} el impuesto {taxToToggle.Nombre}?";
        showConfirmationModal = true;
    }

    private async Task ConfirmToggleTaxStatus()
    {
        showConfirmationModal = false; // Hide the modal

        var taxToToggle = taxes.FirstOrDefault(t => t.Id == taxToToggleId);
        if (taxToToggle == null) return;

        try
        {
            await TaxService.DeleteTaxAsync(taxToToggleId);
            await LoadTaxes();
        }
        catch (Exception ex)
        {
            // Handle error, e.g., display an error message
            Console.WriteLine($"Error al toggling tax status: {ex.Message}");
        }
    }

    private void CancelToggleTaxStatus()
    {
        showConfirmationModal = false; // Hide the modal
        taxToToggleId = Guid.Empty;
    }

    private async Task HandleUpdateTax(TaxDto tax)
    {
        await TaxService.UpdateTaxAsync(tax);
        isEditModalVisible = false;
        taxToEdit = null;
        await LoadTaxes();
    }

    private void OpenEditModal(TaxDto tax)
    {
        taxToEdit = new TaxDto
        {
            Id = tax.Id,
            Nombre = tax.Nombre,
            CodigoSRI = tax.CodigoSRI,
            Porcentaje = tax.Porcentaje,
            EstaActivo = tax.EstaActivo
        };
        isEditModalVisible = true;
    }

    private void CloseEditModal()
    {
        isEditModalVisible = false;
        taxToEdit = null;
    }

    private void GoToCreateTax()
    {
        Navigation.NavigateTo("/taxes/create");
    }
}