@page "/reports/sales/accounts-receivable"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@inject HttpClient Http

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="m-0 font-weight-bold text-primary">Reporte de Cuentas por Cobrar</h4>
                <p class="text-muted mb-0">Muestra todas las facturas con saldos pendientes de pago.</p>
            </div>
            <button class="btn btn-primary" @onclick="GenerateReport" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="ms-1">Actualizando...</span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise me-1"></i>
                    <span>Actualizar</span>
                }
            </button>
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        ¡Excelente! No hay cuentas por cobrar pendientes.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Cliente</th>
                                    <th>Factura #</th>
                                    <th>Fecha Emisión</th>
                                    <th class="text-end">Días Vencida</th>
                                    <th class="text-end">Monto Factura</th>
                                    <th class="text-end">Monto Pagado</th>
                                    <th class="text-end">Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData.OrderByDescending(x => x.DiasVencida))
                                {
                                    <tr class="@(item.DiasVencida > 30 ? "table-danger" : item.DiasVencida > 15 ? "table-warning" : "")">
                                        <td>@item.NombreCliente</td>
                                        <td>@item.NumeroFactura</td>
                                        <td>@item.FechaEmision.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">@item.DiasVencida</td>
                                        <td class="text-end">@item.MontoFactura.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.MontoPagado.ToString("C", esEcCulture)</td>
                                        <td class="text-end font-weight-bold">@item.SaldoPendiente.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr class="table-primary">
                                    <td colspan="6" class="text-end font-weight-bold"><strong>Total Pendiente:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.SaldoPendiente).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<CuentasPorCobrarDto>? reportData;
    private bool isLoading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    protected override async Task OnInitializedAsync()
    {
        await GenerateReport();
    }

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var response = await Http.GetAsync($"/api/reports/sales/accounts-receivable");

            if (response.IsSuccessStatusCode)
            {
                reportData = await response.Content.ReadFromJsonAsync<IEnumerable<CuentasPorCobrarDto>>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"No se pudo generar el reporte. El servidor respondió con el código de estado {response.StatusCode}. Detalles: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error de red o de cliente al intentar generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
