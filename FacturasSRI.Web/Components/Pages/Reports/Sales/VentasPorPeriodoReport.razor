@page "/reports/sales/by-period"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization
@using FacturasSRI.Application.Dtos.Reports
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject IJSRuntime JSRuntime

@attribute [Authorize(Roles = "Administrador, Vendedor")]

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Reporte de Ventas por Período</h4>
            <p class="text-muted mb-0">Agrupa las ventas por día y muestra los totales consolidados.</p>
        </div>
        <div class="card-body">
            <div class="row align-items-end mb-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Fecha de Inicio</label>
                    <input type="date" id="startDate" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">Fecha de Fin</label>
                    <input type="date" id="endDate" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="GenerateReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="ms-1">Generando...</span>
                        }
                        else
                        {
                            <i class="bi bi-search me-1"></i>
                            <span>Generar Reporte</span>
                        }
                    </button>
                    @if (reportData != null && reportData.Any())
                    {
                        <button class="btn btn-info" @onclick="DownloadPdf" disabled="@isLoading">
                            <i class="bi bi-file-earmark-pdf me-1"></i>
                            Descargar PDF
                        </button>
                    }
                </div>
            </div>

            @if (errorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (reportData != null)
            {
                if (!reportData.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No se encontraron datos de ventas para el período seleccionado.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="reportTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th class="text-end">Facturas Emitidas</th>
                                    <th class="text-end">Subtotal</th>
                                    <th class="text-end">Total IVA</th>
                                    <th class="text-end">Total Vendido</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData)
                                {
                                    <tr>
                                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">@item.CantidadFacturas</td>
                                        <td class="text-end">@item.Subtotal.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.TotalIva.ToString("C", esEcCulture)</td>
                                        <td class="text-end">@item.Total.ToString("C", esEcCulture)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <td colspan="1" class="text-end font-weight-bold"><strong>Totales:</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.CantidadFacturas)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.Subtotal).ToString("C", esEcCulture)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.TotalIva).ToString("C", esEcCulture)</strong></td>
                                    <td class="text-end font-weight-bold"><strong>@reportData.Sum(x => x.Total).ToString("C", esEcCulture)</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private IEnumerable<VentasPorPeriodoDto>? reportData;
    private bool isLoading = false;
    private string? errorMessage;
    private readonly CultureInfo esEcCulture = new CultureInfo("es-EC");

    private async Task GenerateReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        if (startDate > endDate)
        {
            errorMessage = "La fecha de inicio no puede ser posterior a la fecha de fin.";
            isLoading = false;
            return;
        }

        try
        {
            var response = await Http.GetAsync($"/api/reports/sales/by-period?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}");

            if (response.IsSuccessStatusCode)
            {
                reportData = await response.Content.ReadFromJsonAsync<IEnumerable<VentasPorPeriodoDto>>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"No se pudo generar el reporte. El servidor respondió con el código de estado {response.StatusCode}. Detalles: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error de red o de cliente al intentar generar el reporte: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DownloadPdf()
    {
        var url = $"/api/reports/sales/by-period/pdf?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
        await JSRuntime.InvokeVoidAsync("open", url, "_blank");
    }
}
