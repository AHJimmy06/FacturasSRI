@page "/purchases"
@attribute [Authorize(Roles = "Administrador, Bodeguero")]
@using FacturasSRI.Application.Dtos
@using FacturasSRI.Application.Interfaces
@using FacturasSRI.Domain.Enums
@inject IPurchaseService PurchaseService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Historial de Compras</PageTitle>

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1>Cuentas por Pagar</h1>
        <p>Consulta todas las compras registradas y su estado de pago.</p>
    </div>
    <a href="/purchases/create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-2"></i>Registrar Nueva Compra
    </a>
</div>


<div class="mb-3">
    <input type="text" class="form-control" placeholder="Buscar por producto o proveedor..." @bind-value="searchTerm" @bind-value:event="oninput" />
</div>

@if (isLoading)
{
    <p><em>Cargando historial de compras...</em></p>
}
else if (FilteredPurchases.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Estado</th>
                            <th>Producto</th>
                            <th>Proveedor</th>
                            <th class="text-end">Monto Total</th>
                            <th>Fecha Emisión</th>
                            <th>Fecha Vencimiento</th>
                            <th>Fecha Pago</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var purchase in FilteredPurchases)
                        {
                            <tr>
                                <td>
                                    <span class="badge @GetBadgeClass(purchase.Estado)">
                                        @purchase.Estado.ToString()
                                    </span>
                                </td>
                                <td>@purchase.ProductName</td>
                                <td>@purchase.NombreProveedor</td>
                                <td class="text-end">@purchase.MontoTotal.ToString("C")</td>
                                <td>@purchase.FechaEmision.ToLocalTime().ToString("d")</td>
                                <td>@(purchase.FechaVencimiento?.ToLocalTime().ToString("d") ?? "N/A")</td>
                                <td>@(purchase.FechaPago?.ToLocalTime().ToString("d") ?? "N/A")</td>
                                <td class="text-center">
                                    @if (purchase.Estado == EstadoCompra.Pendiente || purchase.Estado == EstadoCompra.Vencida)
                                    {
                                        <button class="btn btn-sm btn-success" @onclick="() => GoToRegisterPayment(purchase.Id)">
                                            <i class="bi bi-cash-coin"></i> Registrar Pago
                                        </button>
                                    }
                                    @if (!string.IsNullOrEmpty(purchase.FacturaCompraPath))
                                    {
                                        <button class="btn btn-sm btn-outline-secondary ms-1" @onclick="() => DownloadFile(purchase.Id)">
                                            <i class="bi bi-file-earmark-pdf"></i> Ver Factura
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <p>No se han registrado compras todavía.</p>
}

@code {
    private List<PurchaseListItemDto> allPurchases = new();
    private bool isLoading = true;
    private string searchTerm = string.Empty;

    private List<PurchaseListItemDto> FilteredPurchases => string.IsNullOrWhiteSpace(searchTerm)
        ? allPurchases
        : allPurchases.Where(p => p.ProductName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                                  p.NombreProveedor.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                      .ToList();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            allPurchases = await PurchaseService.GetPurchasesAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetBadgeClass(EstadoCompra estado)
    {
        return estado switch
        {
            EstadoCompra.Pagada => "bg-success",
            EstadoCompra.Pendiente => "bg-warning text-dark",
            EstadoCompra.Vencida => "bg-danger",
            EstadoCompra.Cancelada => "bg-secondary",
            _ => "bg-light text-dark",
        };
    }
    
    private void GoToRegisterPayment(Guid purchaseId)
    {
        Navigation.NavigateTo($"/purchases/pay/{purchaseId}");
    }

    private async Task DownloadFile(Guid purchaseId)
    {
        // Esta lógica podría necesitar un ajuste si la ruta de la API cambia
        var url = $"/api/downloads/purchase-receipt/{purchaseId}";
        await JSRuntime.InvokeVoidAsync("open", url, "_blank");
    }
}