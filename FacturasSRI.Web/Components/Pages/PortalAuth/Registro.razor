@page "/portal/register"
@using FacturasSRI.Domain.Enums
@using FacturasSRI.Application.Dtos
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Registro de Nuevo Cliente</h3>
<p class="text-muted">Este registro es exclusivo para clientes.</p>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<EditForm Model="@registerModel" OnValidSubmit="HandleRegistration">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Tipo de Identificación</label>
                <InputSelect class="form-control" @bind-Value="registerModel.TipoIdentificacion">
                    @foreach (var type in Enum.GetValues(typeof(TipoIdentificacion)))
                    {
                        <option value="@type">@type</option>
                    }
                </InputSelect>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Número de Identificación</label>
                <InputText class="form-control" @bind-Value="registerModel.NumeroIdentificacion" />
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label>Razón Social (Nombre Completo o de Empresa)</label>
        <InputText class="form-control" @bind-Value="registerModel.RazonSocial" />
    </div>

    <div class="form-group">
        <label>Correo Electrónico</label>
        <InputText type="email" class="form-control" @bind-Value="registerModel.Email" />
    </div>

    <div class="form-group">
        <label>Dirección</label>
        <InputText class="form-control" @bind-Value="registerModel.Direccion" />
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        <InputText class="form-control" @bind-Value="registerModel.Telefono" />
    </div>

    <div class="form-group">
        <label>Contraseña</label>
        <InputText type="password" class="form-control" @bind-Value="registerModel.Password" />
        <small class="form-text text-muted">Debe tener al menos 8 caracteres.</small>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrarse</button>
    <a href="/portal/login" class="btn btn-link mt-3">¿Ya tienes cuenta? Inicia Sesión</a>
</EditForm>

@code {
    private ClienteRegistroDto registerModel = new();
    private string? errorMessage;
    private string? successMessage;

    private async Task HandleRegistration()
    {
        errorMessage = null;
        successMessage = null;
        var response = await Http.PostAsJsonAsync("api/PortalAuth/register", registerModel);

        if (response.IsSuccessStatusCode)
        {
            successMessage = "¡Registro exitoso! Serás redirigido a la página de inicio de sesión.";
            await Task.Delay(2000);
            Navigation.NavigateTo("/portal/login");
        }
        else
        {
            var errorContent = await response.Content.ReadAsStringAsync();
            errorMessage = $"Error en el registro: {errorContent}";
        }
    }
}
