@inject CurrentUserState CurrentUser
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FacturasSRI</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        
        <div class="nav-item px-3">
            <span class="nav-link text-white">
                <span class="bi bi-person-check-fill-nav-menu" aria-hidden="true"></span> Logueado como: <strong>@CurrentUser.Role</strong>
            </span>
        </div>
        <hr class="bg-light" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="gestion-productos">
                <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Productos
            </NavLink>
        </div>

    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        CurrentUser.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CurrentUser.OnChange -= StateHasChanged;
    }
}
